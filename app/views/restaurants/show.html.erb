<h1><%= @restaurant.name %></h1>

<div class="card">
  <img class="card-img-top img-circle" src="https://loremflickr.com/320/240/food" alt="Image">
  <div class="card-body">
    <h2 class="card-title"><%= @restaurant.name %></h3>
    <p class="card-text"><strong>Address : </strong>
      <%= @restaurant.address %>
    </p>
    <p class="card-text"><strong>Phone number : </strong>
      <%= @restaurant.phone_number %>
    </p>
    <p class="card-text"><strong>Category : </strong>
      <%= @restaurant.category %>
    </p>
  </div>
  <div class="card-footer">
    <h3>Reviews</h3>
      <ul class="list-unstyled">
        <% @restaurant.reviews.each do |review| %>
          <li>
            <%= review.content %>
            <% review.rating.times do |x| %>
              <i class="fa fa-star rating"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>
</div>

<hr>

<i>
  <%= link_to "Add a review", new_restaurant_review_path(params[:id]), class: "btn btn-primary" %>
</i>

<hr>

<%= link_to restaurants_path do %>
  <span class="glyphicon glyphicon-menu-left"></span>
  <span>Back to list</span>
<% end %>
